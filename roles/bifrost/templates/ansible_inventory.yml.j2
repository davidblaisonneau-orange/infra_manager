---
all:
  children:
{% for role in roles | sort %}
    {{ role }}:
      hosts:
{% for name in roles[role] | sort %}
{% if name in nodes_d %}
        {{ name }}:
          index: {{ nodes_index[name] }}
          ansible_host: {{ pxe_net.network| ip_add( idf.xci.ip_shift + nodes_index[name]) }}
          ansible_user: root
{% endif %}
{% endfor %}
{% endfor %}
    xci_nodes:
      hosts:
{% for name in xci_nodes_list | sort  %}
{% if name in nodes_d and name in nodes_index %}
        {{ name }}:
          index: {{ nodes_index[name] }}
          ansible_host: {{ pxe_net.network| ip_add( idf.xci.ip_shift + nodes_index[name]) }}
          ansible_user: root
{% endif %}
{% endfor %}
